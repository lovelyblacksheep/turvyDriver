	        end={{ x: 1.2, y: 1 }}>
	        <View style={{justifyContent:'center',alignItems:'center',flexDirection:'row',marginLeft:12}}>
	            <Text style={[styles.priBtnTxt,{flex:7,textAlign:'center'}]}>Verify</Text>

	        </View>
	    </LinearGradient>
	</TouchableHighlight>

      </View>
    </SafeAreaView>
  );
};



export default Verification;